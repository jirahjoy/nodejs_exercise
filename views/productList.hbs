<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Product List</title>
</head>

<body>
    <h2>Product List</h2>
    <table class="table-list">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Supplier Name</th>
            <th> Edit </th>
            <th> Delete </th>
            
        </tr>
        {{#each products}}
        <tr>
            <td>{{this.product_id}}</td>
            <td>{{this.product_name}}</td>
            <td>{{this.product_description}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.supplier_name}}</td> 
            <td><a href="/auth/updateForm/{{this.product_id}}">Edit</a></td> 
            <td><a href="/auth/deleteForm/{{this.product_id}}" onClick="return confirm('Are you sure you want to delete this record?')">Delete</a></td> 
        </tr>
        {{/each}}
    </table>
    <br>
    <button><a href="/">Add New Product</a></button>
    {{#if message}}
        <h4>{{message}}</h4>
    {{/if}}
</body>
</html>